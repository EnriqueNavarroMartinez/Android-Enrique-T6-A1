<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.fragment.app.FragmentContainerView
        class="com.example.android_enrique_t6_a1.fragment.DiscoFragment"
        android:id="@+id/frgListado"
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layout="@layout/fragment_disco" />
    <androidx.fragment.app.FragmentContainerView
        class="com.example.android_enrique_t6_a1.fragment.CancionFragment"
        android:id="@+id/frgDetalle"
        android:layout_weight="60"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layout="@layout/fragment_cancion" />
</LinearLayout>
